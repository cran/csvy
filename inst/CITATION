citHeader("To cite package 'csvy' in publications use:")
     
 year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
 vers <- paste("R package version", meta$Version)
 
 citEntry(entry="Manual",
          title = "csvy: Import and Export CSV Data with a YAML Metadata Header",
          author = personList(as.person("Thomas J. Leeper")),
          year = year,
          note = vers,
          textVersion =
          paste("Thomas J. Leeper (",
                year,
                "). csvy: Import and Export CSV Data With a YAML Metadata Header. ",
                vers, ".", sep=""))
